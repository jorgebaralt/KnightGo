<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ucf.knightgo.FormationActivity">


    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/axe"
        android:layout_marginTop="26dp"
        android:id="@+id/ib1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/axe"
        android:id="@+id/ic1"
        android:layout_alignTop="@+id/ib1"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/axe"
        android:layout_marginTop="38dp"
        android:id="@+id/ia3"
        android:layout_below="@+id/sa2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/axe"
        android:id="@+id/axe"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/pegasus"
        android:id="@+id/pegasus"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/spear"
        android:id="@+id/spear"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/halberd"
        android:id="@+id/halberd"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/mace"
        android:id="@+id/mace"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/sword"
        android:id="@+id/sword"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/crossbow"
        android:id="@+id/crossbow"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/longbow"
        android:id="@+id/longbow"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/shield"
        android:id="@+id/shield"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/sc1"
        android:entries="@array/knight_types"
        android:layout_below="@+id/ic1"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/sb1"
        android:entries="@array/knight_types"
        android:layout_below="@+id/ib1"
        android:layout_alignStart="@+id/ib1" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/sa2"
        android:entries="@array/knight_types"
        android:layout_below="@+id/ia2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/axe"
        android:id="@+id/ib2"
        android:layout_alignTop="@+id/ia2"
        android:layout_alignStart="@+id/ib1" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/axe"
        android:id="@+id/ia2"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/sa1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/axe"
        android:id="@+id/ic2"
        android:layout_alignTop="@+id/ib2"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="90dp"
        android:id="@+id/sb2"
        android:entries="@array/knight_types"
        android:layout_below="@+id/ib2"
        android:layout_alignStart="@+id/sb1"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/sc2"
        android:entries="@array/knight_types"
        android:layout_below="@+id/ic2"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/sa3"
        android:entries="@array/knight_types"
        android:layout_below="@+id/ia3"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/sc3"
        android:entries="@array/knight_types"
        android:layout_alignBaseline="@+id/sa3"
        android:layout_alignBottom="@+id/sa3"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/sb3"
        android:entries="@array/knight_types"
        android:layout_alignBaseline="@+id/sc3"
        android:layout_alignBottom="@+id/sc3"
        android:layout_alignStart="@+id/ib1" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/axe"
        android:id="@+id/ia1"
        android:layout_above="@+id/sb1"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/sa1"
        android:entries="@array/knight_types"
        android:layout_below="@+id/ia1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/axe"
        android:id="@+id/ic3"
        android:layout_above="@+id/sc3"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doneButton"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sa3"
        android:layout_alignEnd="@+id/ib3"
        android:layout_marginTop="14dp"
        android:id="@+id/inventoryText"
        android:layout_alignStart="@+id/ia1"
        android:scrollbars = "vertical"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/axe"
        android:id="@+id/ib3"
        android:layout_above="@+id/sb3"
        android:layout_alignStart="@+id/sb3" />

</RelativeLayout>